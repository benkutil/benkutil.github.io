{
  "name": "benkutil-dot-com",
  "version": "0.4.2",
  "description": "Personal website for Ben Kutil",
  "main": "gulpfile.babel.js",
  "private": true,
  "scripts": {
    "start": "gulp",
    "test": "mocha tests/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benkutil/benkutil.github.io.git"
  },
  "author": "Ben Kutil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benkutil/benkutil.github.io/issues"
  },
  "homepage": "https://github.com/benkutil/benkutil.github.io#readme",
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "critical": "^1.3.9",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imageoptim": "^1.0.9",
    "gulp-load-plugins": "^2.0.2",
    "gulp-load-subtasks": "^1.2.2",
    "gulp-postcss": "^8.0.0",
    "gulp-rev-all": "^2.0.2",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "gulp-uncss": "^1.0.6",
    "gulp-useref": "^4.0.1",
    "js-yaml": "^3.13.1",
    "mocha": "^7.0.0",
    "postcss-sorting": "^5.0.1",
    "run-sequence": "^2.2.1"
  },
  "build": {
    "tasks": "config/gulp",
    "paths": {
      "styles": [
        "source/styles/global.scss"
      ]
    },
    "settings": {
      "pxtorem": {
        "replace": false,
        "rootValue": 10
      },
      "autoprefixer": {
        "browsers": [
          "last 1 version"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "dependencies": {
    "basscss": "^8.1.0",
    "eslint": "^6.8.0",
    "node-gyp": "^6.1.0",
    "node-sass": "^4.13.1",
    "picturefill": "^3.0.3",
    "smooth-scroll": "github:cferdinandi/smooth-scroll"
  }
}
