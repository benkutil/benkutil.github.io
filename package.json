{
  "name": "benkutil-dot-com",
  "version": "0.1.0",
  "description": "Personal website for Ben Kutil",
  "main": "gulpfile.babel.js",
  "private": true,
  "scripts": {
    "start": "gulp",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benkutil/benkutil.github.io.git"
  },
  "author": "Ben Kutil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benkutil/benkutil.github.io/issues"
  },
  "homepage": "https://github.com/benkutil/benkutil.github.io#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "browser-sync": "^2.11.0",
    "critical": "^0.7.0",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-cssnano": "^2.1.0",
    "gulp-htmlmin": "^1.3.0",
    "gulp-if": "^2.0.0",
    "gulp-load-plugins": "^1.2.0",
    "gulp-load-subtasks": "^1.1.2",
    "gulp-postcss": "^6.0.1",
    "gulp-sass": "^2.1.1",
    "gulp-uglify": "^1.5.1",
    "gulp-useref": "^3.0.4"
  },
  "build": {
    "tasks": "config/gulp",
    "paths": {
      "styles": [
        "source/styles/global.scss"
      ]
    },
    "settings": {
      "pxtorem": {
        "replace": false,
        "rootValue": 10
      },
      "autoprefixer": {
        "browsers": [
          "last 1 version"
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
