{
  "name": "benkutil-dot-com",
  "version": "0.4.2",
  "description": "Personal website for Ben Kutil",
  "main": "gulpfile.babel.js",
  "private": true,
  "scripts": {
    "start": "gulp",
    "test": "mocha tests/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benkutil/benkutil.github.io.git"
  },
  "author": "Ben Kutil",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benkutil/benkutil.github.io/issues"
  },
  "homepage": "https://github.com/benkutil/benkutil.github.io#readme",
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.12.3",
    "chai": "^3.5.0",
    "critical": "^0.7.2",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cssnano": "^2.1.1",
    "gulp-htmlmin": "^1.3.0",
    "gulp-if": "^2.0.0",
    "gulp-imageoptim": "^1.0.4",
    "gulp-load-plugins": "^1.2.1",
    "gulp-load-subtasks": "^1.1.2",
    "gulp-postcss": "^6.1.0",
    "gulp-rev-all": "^0.8.24",
    "gulp-sass": "^2.2.0",
    "gulp-uglify": "^1.5.3",
    "gulp-uncss": "^1.0.5",
    "gulp-useref": "^3.0.8",
    "js-yaml": "^3.5.5",
    "mocha": "^2.4.5",
    "run-sequence": "^1.1.5"
  },
  "build": {
    "tasks": "config/gulp",
    "paths": {
      "styles": [
        "source/styles/global.scss"
      ]
    },
    "settings": {
      "pxtorem": {
        "replace": false,
        "rootValue": 10
      },
      "autoprefixer": {
        "browsers": [
          "last 1 version"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "dependencies": {
    "basscss": "^8.0.1",
    "picturefill": "^3.0.2"
  }
}
